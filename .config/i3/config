set $WS7  workspace  7: MON
set $WS8  workspace  8: MISC
set $WS9  workspace  9: MISC
set $WS10 workspace 10: MISC

bindsym $mod+1 $WS1
bindsym $mod+2 $WS2
bindsym $mod+3 $WS3
bindsym $mod+4 $WS4
bindsym $mod+5 $WS5
bindsym $mod+6 $WS6
bindsym $mod+7 $WS7
bindsym $mod+8 $WS8
bindsym $mod+9 $WS9
bindsym $mod+0 $WS10

bindsym $mod+Shift+1 move container to $WS1
